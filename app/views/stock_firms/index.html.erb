<script type="text/javascript">
    mixpanel.track("stock_firms", {"base_date" : "<%=session[:base_date]%>"});
</script>

<h3>StockFirms (<%=@base_date_string%>)</h3>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span9">
      <!--Sidebar content-->

    </div>
    <div class="span3">
      <!--Body content-->

      <div class="input-append">
        <span class="add-on">수익률 계산 기준 날짜</span>
        <div class="btn-group">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            선택
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="<%=stock_firms_path%>?base_date=0">최근 까지</a></li>
            <% (1..12).each do |month| %>
                <li><a href="<%=stock_firms_path%>?base_date=<%=month%>">추천 후 <%=month%>달 동안</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>랭킹</th>
      <th>이름</th>
      <th><%=@base_date_string%> 수익률의 평균</th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>
  <%  %>
  <% @stock_firms_rows.each do |stock_firms_row| %>
    <tr>
      <td><%= stock_firms_row[:ranking] %></td>
      <td><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> <%= stock_firms_row[:stock_firm].name %></a></td>
      <% profit = stock_firms_row[:profit] %>
      <td class=<%= class_of_profit profit %>><%= profit %> %</td>
      <td><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> 자세히보기</td>
      <td><a href="#">시그널링</a></td>
    </tr>
  <% end %>
</table>