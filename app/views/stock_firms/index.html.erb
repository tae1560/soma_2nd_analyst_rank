<h3 class="hidden-phone">StockFirms (<%=@base_date_string%>)</h3>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4">
      <!--Body content-->
      <div class="full-width input-append">
        <div class="half-width btn-group">
          <button class="full-width btn dropdown-toggle" data-toggle="dropdown">
            최근 <span class="param"><%=@recent_period_string%></span> 추천을
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% RecentPeriod.find_each do |recent_period| %>
                <li><a href="<%=stock_firms_path%>?recent_period_id=<%=recent_period.id%>">최근 <span class="param"><%=recent_period.name%></span> 추천을 </a></li>
            <% end %>
          </ul>
        </div>
        <div class="half-width btn-group">
          <button class="full-width btn dropdown-toggle" data-toggle="dropdown">
            <span class="param"><%=@keep_period_string%></span> 동안 유지할 때
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% KeepPeriod.find_each do |keep_period| %>
                <li><a href="<%=stock_firms_path%>?keep_period_id=<%=keep_period.id%>"><span class="param"><%=keep_period.name%></span> 동안 유지할 때 </a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<% if mobile_device? %>
    <% @stock_firms_rows.each do |stock_firms_row| %>
        <div class="rank-item">

          <div class="pull-right">
            <a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>">
              <img width=140px src="./img/firms/<%=stock_firms_row[:id]%>.png"/>
            </a>


          </div>
          <div class="description">
            <h5><%= stock_firms_row[:ranking] %>. <a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"><%= stock_firms_row[:stock_firm].name %></a></h5>

              <% profit = stock_firms_row[:profit] %>
              수익률 : <span class=<%= class_of_profit profit %>><%= profit %> %</span>  <br />


              <% variance = stock_firms_row[:variance] %>
              투자위험도 : <span class=<%= class_of_profit variance %>><%= variance %></span>

          </div>

        </div>
    <% end %>
<% else %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>랭킹</th>
      <th>이름</th>
      <th>평균수익률</th>
      <th>투자위험도</th>
      <th class="hidden-phone"> </th>
      <th class="hidden-phone"> </th>
    </tr>
  </thead>
  <% @stock_firms_rows.each do |stock_firms_row| %>
    <tr>
      <td><%= stock_firms_row[:ranking] %></td>
      <td><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> <%= stock_firms_row[:stock_firm].name %></a></td>
      <% profit = stock_firms_row[:profit] %>
      <td class=<%= class_of_profit profit %>><%= profit %> %</td>
      <% variance = stock_firms_row[:variance] %>
      <td class=<%= class_of_profit variance %>><%= variance %></td>
      <td class="hidden-phone"><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> 자세히보기</td>
      <td class="hidden-phone"><a href="#" onclick="alert('준비중입니다.');">시그널링</a></td>
    </tr>
  <% end %>
</table>
<% end %>