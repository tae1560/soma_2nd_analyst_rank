<h3 class="hidden-phone">StockFirms (<%=@base_date_string%>)</h3>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
      <!--Sidebar content-->

    </div>
    <div class="span4">
      <!--Body content-->

      <div class="input-append">
        <span class="add-on">수익률 계산 기준 날짜</span>
        <div class="btn-group">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            선택
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% RecentPeriod.find_each do |recent_period| %>
                <li><a href="<%=stock_firms_path%>?recent_period_id=<%=recent_period.id%>">최근 <%=recent_period.name%> 추천을 </a></li>
            <% end %>
          </ul>
        </div>
        <div class="btn-group">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            선택
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% KeepPeriod.find_each do |keep_period| %>
                <li><a href="<%=stock_firms_path%>?keep_period_id=<%=keep_period.id%>"><%=keep_period.name%> 동안 유지할 때 </a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>랭킹</th>
      <th>이름</th>
      <th>수익률평균</th>
      <th>수익률분산</th>
      <th class="hidden-phone"> </th>
      <th class="hidden-phone"> </th>
    </tr>
  </thead>
  <%  %>
  <% @stock_firms_rows.each do |stock_firms_row| %>
    <tr>
      <td><%= stock_firms_row[:ranking] %></td>
      <td><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> <%= stock_firms_row[:stock_firm].name %></a></td>
      <% profit = stock_firms_row[:profit] %>
      <td class=<%= class_of_profit profit %>><%= profit %> %</td>
      <% variance = stock_firms_row[:variance] %>
      <td class=<%= class_of_profit variance %>><%= variance %></td>
      <td class="hidden-phone"><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> 자세히보기</td>
      <td class="hidden-phone"><a href="#" onclick="alert('준비중입니다.');">시그널링</a></td>
    </tr>
  <% end %>
</table>