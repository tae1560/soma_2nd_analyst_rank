<script type="text/javascript">
    mixpanel.track("stock_firms", {"base_date" : "<%=session[:base_date]%>"});
</script>

<h3 class="hidden-phone">StockFirms (<%=@base_date_string%>)</h3>
<div class="container-fluid">
  <div class="row-fluid">
      <!--Body content-->
        <div class="input-append">
          <div class="btn-group">
            <button class="btn dropdown-toggle" data-toggle="dropdown">
              최근 n달 내 추천종목을
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <% (1..12).each do |month| %>
                  <li><a href="<%=stock_firms_path%>?base_date=<%=month%>">최근 <%=month%>달 내 추천종목을</a></li>
              <% end %>
              <li><a href="<%=stock_firms_path%>?base_date=0">전체</a></li>
            </ul>
            <%=@base_date_string%>
          </div>
        <div class="btn-group">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            매수한 후 n달 뒤에 팔았다면
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% (1..12).each do |month| %>
                <li><a href="<%=stock_firms_path%>?base_date=<%=month%>">추천 후 <%=month%>달 뒤에 팔았다면</a></li>
            <% end %>
            <li><a href="<%=stock_firms_path%>?base_date=0">최근 까지</a></li>
          </ul>
          <%=@base_date_string%>
        </div>
      </div>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>순위</th>
      <th>이름</th>
      <th>평균수익률</th>
      <th class="hidden-phone"> </th>
      <th class="hidden-phone"> </th>
    </tr>
  </thead>
  <%  %>
  <% @stock_firms_rows.each do |stock_firms_row| %>
    <tr>
      <td><%= stock_firms_row[:ranking] %></td>
      <td><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> <%= stock_firms_row[:stock_firm].name %></a></td>
      <% profit = stock_firms_row[:profit] %>
      <td class=<%= class_of_profit profit %>><%= profit %> %</td>
      <td class="hidden-phone"><a href="<%= stock_firm_path(stock_firms_row[:stock_firm]) %>"> 자세히보기</a></td>
      <td class="hidden-phone"><a href="#" onclick="alert('준비중입니다.');">시그널링</a></td>
    </tr>
  <% end %>
</table>