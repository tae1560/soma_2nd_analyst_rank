<h3>Recommendations</h3>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>추천날짜</th>
      <th>종목코드</th>
      <th>종목명</th>
      <th>증권사명</th>
      <th>추천시 종가</th>
      <th>현재 종가</th>
      <th>수익률</th>
    </tr>
  </thead>

  <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.in_date.in_time_zone("Seoul").to_date %></td>
        <td><%= recommendation.symbol %></td>
        <td><%= recommendation.stock_code.name %></td>
        <td><%= recommendation.stock_firm.name %></td>
        <%
           current = DayCandle.where(:trading_date => recommendation.in_date, :symbol => recommendation.symbol).first
           last = DayCandle.where(:symbol => recommendation.symbol).order(:trading_date).last
           surplus = recommendation.profit Time.now
        %>
        <td><%= current.close %></td>
        <td><%= last.close %></td>
        <% if surplus < 0 %>
            <td class="text-error">
        <% else %>
            <td class="text-success">
        <% end %>
        <%= surplus %> %</td>
      </tr>
  <% end %>
</table>
